<h1>Folders</h1>

<% if @folders.any? %>
  <ul>
    <% @folders.each do |folder| %>
      <li>
        <%= folder.path %> <!-- Display the filename -->
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No folders have been uploaded yet.</p>
<% end %>

<%= link_to 'Create New Folder', new_folder_path %>